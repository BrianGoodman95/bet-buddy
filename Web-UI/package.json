{
  "name": "bet-buddy",
  "version": "1.0.0",
  "description": "#### Helping you Create and Track Your Bets",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "build": "npm run install-client && npm run build-client && npm install",
    "start": "node server.js",
    "dev-build": "npm run install-client && npm install",
    "dev-start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "server": "nodemon server --ignore client",
    "client": "npm start --prefix client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.21"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-rate-limiter": "^1.3.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "mongoose": "^7.0.1",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "xss-clean": "^0.1.1"
  }
}
